        <definition>a!localVariables(
  /*local!datos:split(ri!texto[1], "|"),*/

  /*local!fecha: (index(local!datos, 10, null)),*/
  local!fechas:#"SYSTEM_SYSRULES_forEach"(
    items: ri!texto, 
    expression: {
      a!localVariables(
        local!datosFila: split(fv!item, "|"),
        local!fecha1: (index(local!datosFila, 10, null)),
        if(and(/*local!fecha=local!fecha1,*/#"_a-0000eaa5-8248-8000-e681-01ef9001ef90_8190744"(texto:local!fecha1)=false,len(local!fecha1)=10),
        local!fecha1,
        null)

      )

    } 
  ),

  /*local!correcto1:if(a!isNotNullOrEmpty(a!flatten(reject(fn!isnull, local!correcto))),false,true),*/
  /*local!correcto1*/
  count(a!flatten(reject(fn!isnull, local!fechas)))=ri!total_lineas
  

)</definition>
