    <rule>
        <name>SCDO_VALIDAR_RIESGOS_NO_NULL_NI_LETRAS</name>
        <uuid>_a-0000eaa5-8248-8000-e681-01ef9001ef90_8187015</uuid>
        <description>Regla de expresión para validar si existen riesgos vacíos o con letras</description>
        <parentUuid>_a-0000e9a3-ab27-8000-e63d-01ef9001ef90_4829216</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>a!localVariables(
  local!riesgos:#"SYSTEM_SYSRULES_forEach"(
    items: ri!texto, 
    expression: {
      a!localVariables(
        local!datosFila: split(fv!item, "|"),
        local!riesgo:    
        if(tointeger(index(local!datosFila, 13, 0))=1,
        tointeger(index(local!datosFila, 13, 0)),
        if(tointeger(index(local!datosFila, 13, 0))=2,
        tointeger(index(local!datosFila, 13, 0)),
        if(tointeger(index(local!datosFila, 13, 0))=3,
        tointeger(index(local!datosFila, 13, 0)),
        null
        )
        )
        ),



        if(a!isNotNullOrEmpty(local!riesgo),
        local!riesgo,
        null
        )

      )

    } 
  ),
  /*local!riesgos*/
  count(reject(fn!isnull, local!riesgos))=ri!total_lineas



)</definition>
        <namedTypedValue>
            <name>texto</name>
            <type>
                <name>Text?list</name>
                <namespace>http://www.appian.com/ae/types/2009</namespace>
            </type>
        </namedTypedValue>
        <namedTypedValue>
            <name>total_lineas</name>
            <type>
                <name>int</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
        </namedTypedValue>
        <preferredEditor>legacy</preferredEditor>
        <offlineEnabled>false</offlineEnabled>
    </rule>
